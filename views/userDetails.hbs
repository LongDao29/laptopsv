<form action="/updateUser" method="post" enctype="application/x-www-form-urlencoded">
    <input type="hidden" name="_id" value="{{data._id}}">
    <div class="form-group">
        <label>Họ tên: </label>
        <input class="form-control" name="full_name" value="{{data.full_name}}">
    </div>
    <div class="form-group">
        <label>Số điện thoại: </label>
        <input  class="form-control" name="phone_number" value="{{data.phone_number}}" readonly>
    </div>
    <div class="form-group">
        <label>Mật khẩu: </label>
        <input class="form-control" name="password" value="{{data.password}}">
    </div>
    <div class="form-group">
        <label>Địa chỉ: </label>
        <input class="form-control" name="address" value="{{data.address}}">
    </div>

    <button type="submit" class="btn btn-info" style="margin: 10px">Sửa</button>
</form>
