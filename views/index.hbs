                    <div name="id" hidden> {{this._id}}</div>
                    <div><label>Mã hóa đơn: </label> {{this.id_bill}}</div>
                    <div><label>Số điện thoại: </label> {{this.phone_number}}</div>
                    <div><label>Thanh toán: </label> {{this.total_value}}</div>
                    <div><label>Trạng thái: </label> {{this.status}}</div>
                </div>
                <div class="row" style="margin-left: 10px; margin-right: 10px; margin-top: 10px">
                    <a type="button" class="btn btn-outline-primary" href="./getBillDetails/{{this._id}}" style="margin-bottom: 10px;">Xem Chi tiết</a>
                </div>
                <div class="row" style="margin-left: 10px; margin-right: 10px">
                    <a type="button" class="col btn btn-success" href="./confirmBill/{{this._id}}" style="margin-bottom: 10px; margin-right: 10px">Xác nhận đơn hàng</a>
                    <a type="button" class="col btn btn-danger" href="./cancleBill/{{this._id}}" style="margin-bottom: 10px">Hủy đơn hàng</a>
                </div>
                <div class="row" style="margin-left: 10px; margin-right: 10px">
                    <a type="button" class="col btn btn-warning" href="./deliveryBill/{{this._id}}" style="margin-bottom: 10px; margin-right: 10px">Giao hàng</a>
                    <a type="button" class="col btn btn-success" href="./doneBill/{{this._id}}" style="margin-bottom: 10px">Hoàn thành</a>
                </div>
            </div>
        {{/each}}
    </div>
</form>

