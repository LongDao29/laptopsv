                    <div name="id" hidden> {{this._id}}</div>
                    <div><label>Họ tên: </label> {{this.full_name}}</div>
                    <div><label>Số điện thoại: </label> {{this.phone_number}}</div>
                    <div><label>Địa chỉ: </label> {{this.address}}</div>
                </div>
                <div class="col mt-2 text-center">
