        <div class="col-3 mt-2 border border-secondary border-2" style="margin-bottom: 10px; margin-right: 10px; width: 32%">
           <div class="col mt-2" >
               <div name="id" hidden>{{this._id}}</div>
               <div><label>Tên sản phẩm: </label> {{this.name_product}}</div>
               <div><label>Giá sản phẩm: </label> {{this.price_product}}</div>
               <div><label>Thương hiệu: </label> {{this.brand_product}}</div>
           </div>
            <div class="col mt-2 text-center">
                <div class="image d-inline-block" style="width: 90px; height: 70px"><img style="width: 90px; height: 70px" src="images/{{this.image1}}"></div>
